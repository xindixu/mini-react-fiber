{
	"root": true,
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"airbnb-base",
		"prettier"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"plugins": [
		"prettier"
	],
	"rules": {
		"prettier/prettier": [
			"error"
		],
		"camelcase": 0,
		"consistent-return": 0,
		"no-console": [
			"error",
			{
				"allow": [
					"error",
					"debug",
					"warn"
				]
			}
		],
		"no-nested-ternary": 0,
		"no-param-reassign": 0,
		"no-prototype-builtins": 0,
		"no-underscore-dangle": 0,
		"no-unused-expressions": 0,
		"prefer-promise-reject-errors": 0,
		"import/prefer-default-export": 0,
		"import/extensions": [
			"error",
			"always",
			{
				"js": "always"
			}
		],
		"class-methods-use-this": 0,
		"func-names": 0
	}
}